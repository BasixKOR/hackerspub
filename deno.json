{
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno run -A main.ts",
    "update": "deno run -A -r jsr:@fresh/update .",
    "drizzle-kit": "deno run -A npm:drizzle-kit",
    "migrate": "deno run -A npm:drizzle-kit migrate",
    "migrate:generate": "deno run -A npm:drizzle-kit generate",
    "migrate:node": "npx drizzle-kit migrate"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*",
    "drizzle/",
    "node_modules/"
  ],
  "imports": {
    "@fedify/fedify": "jsr:@fedify/fedify@^1.2.3",
    "@fedify/postgres": "jsr:@fedify/postgres@^0.2.1",
    "@logtape/logtape": "jsr:@logtape/logtape@^0.7.1",
    "@neondatabase/serverless": "npm:@neondatabase/serverless@^0.10.3",
    "@onisaint/validate-email": "jsr:@onisaint/validate-email@^1.0.1",
    "@resvg/resvg-wasm": "npm:@resvg/resvg-wasm@^2.6.2",
    "@schotsl/mailgun": "jsr:@schotsl/mailgun@^1.3.0",
    "@std/assert": "jsr:@std/assert@^1.0.7",
    "@std/collections": "jsr:@std/collections@^1.0.9",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@std/encoding": "jsr:@std/encoding@^1.0.5",
    "@std/html": "jsr:@std/html@^1.0.3",
    "@std/http": "jsr:@std/http@^1.0.9",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/uuid": "jsr:@std/uuid@^1.0.4",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.15",
    "drizzle-kit": "npm:drizzle-kit@^0.28.0",
    "drizzle-orm": "npm:drizzle-orm@^0.36.1",
    "fresh": "jsr:@fresh/core@^2.0.0-alpha.25",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.7",
    "markdown-it": "npm:markdown-it@^14.1.0",
    "markdown-it-abbr": "npm:markdown-it-abbr@^2.0.0",
    "markdown-it-deflist": "npm:markdown-it-deflist@^3.0.0",
    "markdown-it-footnote": "npm:markdown-it-footnote@^4.0.0",
    "markdown-it-github-alert": "npm:markdown-it-github-alert@^1.0.6",
    "postgres": "npm:postgres@^3.4.5",
    "preact": "npm:preact@^10.24.3",
    "@preact/signals": "npm:@preact/signals@^1.3.0",
    "satori": "npm:satori@^0.11.3",
    "satori-html": "npm:satori-html@^0.3.2",
    "tailwindcss": "npm:tailwindcss@3.4.3",
    "tailwindcss/plugin": "npm:tailwindcss@3.4.3/plugin.js",
    "xss": "npm:xss@^1.0.15"
  },
  "unstable": [
    "kv",
    "temporal"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head"
    ]
  },
  "nodeModulesDir": "auto",
  "deploy": {
    "project": "1b9271c8-17f2-4ee2-b824-9a622ee3b7f3",
    "exclude": [
      "**/node_modules"
    ],
    "include": [],
    "entrypoint": "main.ts"
  }
}
